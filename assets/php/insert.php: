<?php
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $date = $_POST['date'];
    $time = $_POST['time'];
    $glucose = $_POST['glucose'];

    $file = fopen('../../data/glicemia.csv', 'a');
    fputcsv($file, array($date, $time, $glucose));
    fclose($file);

    echo json_encode(['success' => true]);
} else {
    echo json_encode(['success' => false]);
}
